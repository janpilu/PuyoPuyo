<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="game.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" fx:id="root" hgap="10" vgap="5">
    <Text fx:id="score" GridPane.rowIndex="0" GridPane.columnIndex="0" ></Text>
    <GridPane fx:id="next" GridPane.rowIndex="0" GridPane.columnIndex="1" alignment="TOP_RIGHT"></GridPane>
    <GridPane fx:id="grid" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="3">
    </GridPane>
</GridPane>